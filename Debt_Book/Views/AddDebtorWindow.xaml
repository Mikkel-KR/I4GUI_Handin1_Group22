<Window x:Class="Debt_Book.Views.AddDebtorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Debt_Book.Views"
        mc:Ignorable="d"
        Title="AddDebtorWindow" Height="300" Width="300"
        FontSize="20">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center">Add Debtor</Label>
        <TextBox Name="AddDebtorName" Grid.Row="1" VerticalAlignment="Center"></TextBox>

        <Grid Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center" Padding="10 3" Content="Save"/>
            <Button Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" Padding="10 3" IsCancel="True" Content="Cancel"/>
        </Grid>
    </Grid>
</Window>